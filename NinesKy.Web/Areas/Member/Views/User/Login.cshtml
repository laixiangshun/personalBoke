
@model NinesKy.Web.Areas.Member.Models.LoginViewModel
@{
    ViewBag.Title = "会员登录";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>会员登录</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(u => u.UserName, new{ @class="control-lable col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(u=>u.UserName)
                @Html.ValidationMessageFor(u=>u.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.RememberMe, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(u => u.RememberMe)
                @Html.ValidationMessageFor(u => u.RememberMe)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登录" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
