
@model NinesKy.Web.Areas.Member.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal">
        <h4>用户注册</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class="control-lable col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(m=>m.UserName)
                @Html.ValidationMessageFor(m=>m.UserName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DisplayName, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DisplayName)
                @Html.ValidationMessageFor(m => m.DisplayName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.VerificationCode, new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.VerificationCode)
                <img id="verificationcode" title="点击刷新" src="@Url.Action("VerificationCode")" style="cursor:pointer;"/>
                @Html.ValidationMessageFor(m => m.VerificationCode)
            </div>
        </div>
        <div class="checkbox">
            <input type="checkbox" checked="checked" required/>我同意<a href="#">《用户注册协议》</a>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="注册" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
<br />
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $("#verificationcode").click(function () {
        $("#verificationcode").attr("src", "@Url.Action("VerificationCode")?" + new Date());
    })
</script>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

